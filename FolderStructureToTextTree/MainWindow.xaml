<Window x:Class="FolderStructureToTextTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:FolderStructureToTextTree.Views"
        xmlns:vm="clr-namespace:FolderStructureToTextTree.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- 필요하다면 MainWindowViewModel을 설정합니다. -->
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <!-- FolderTreeView를 MainWindow에 포함 -->
        <views:FolderTreeView/>
    </Grid>
</Window>
